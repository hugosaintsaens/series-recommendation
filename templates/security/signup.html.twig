{% extends 'base.html.twig' %}

{% block body %}

<div class="container text-center">
	<a href="{{ path('index') }}">
		<img src="images/logo.png" width="300" class="img-fluid my-5">
	</a>
	<h1 class="display-6">
		<strong>S'inscrire à LP Series</strong>
	</h1>
</div>
<div class="container-fluid mt-4">
	<div class="row">
		<div class="col-lg-4 col-md-6 col-sm-8 col-12 mx-auto">
			{{ form_start(form, {'attr': {'class': 'p-3 border rounded-3'}}) }}
			{{ form_row(form.name, {'label': 'Nom d\'utilisateur', 'label_attr': {'class': 'fw-bold'}, 'attr': {'class': 'form-control', 'placeholder': 'Entrer votre nom d\'utilisateur', 'autocomplete': 'off', 'maxlength' : '10', 'autofocus' : 'autofocus'}}) }}
			{{ form_row(form.password.first, {'label': 'Mot de passe', 'label_attr': {'class': 'fw-bold mt-2'}, 'attr': {'class': 'form-control', 'placeholder': 'Entrer votre mot de passe', 'autocomplete': 'off', 'maxlength' : '30'}}) }}
			{{ form_row(form.password.second, {'label': 'Confirmation du mot de passe', 'label_attr': {'class': 'fw-bold mt-2'}, 'attr': {'class': 'form-control', 'maxlength': '30','placeholder': 'Répétez votre mot de passe', 'autocomplete': 'off', 'maxlength' : '30'}}) }}
			{{ form_row(form.sinscrire, {'label': 'S\'inscrire !', 'attr': {'class': 'btn btn-primary w-100 mt-4'}}) }}
			{{ form_end(form) }}
		</div>
	</div>
</div>

{% endblock %}
